<h1>Listing personas</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>School</th>
    <th>Monitor</th>
    <th>Supervisor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.first_name %></td>
    <td><%= persona.last_name %></td>
    <td><%= persona.school_id %></td>
    <td><%= persona.monitor_id %></td>
    <td><%= persona.supervisor_id %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

