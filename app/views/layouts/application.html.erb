<!DOCTYPE html>
<html>
<head>
  <title><%= t('page_title') %></title>
  <%= csrf_meta_tag %>
  <%= javascript_include_tag :defaults %>
  <%= stylesheet_link_tag 'scaffold' %>
</head>
<body>

<div id="flash_messages">
  <%= render :partial => "layouts/flash_messages" %>
</div>

<div id="session">
  <%= current_user.username %> | <%= current_user.federation.name %> | <%= link_to t('sign_out'), destroy_user_session_path %>
</div>

<div id="nav-bar">
  <%= link_to t('.people'), people_url %> |
  <%= link_to t('.schools'), schools_url %>
</div>

<%= yield %>

<%= yield :pre_end_body %>
</body>
</html>

